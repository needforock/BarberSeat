<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    package="ve.needforock.barberseat">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.login.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.barber_selection.BarberSelectionActivity" />
        <activity android:name=".views.day.DayView" />
        <activity
            android:name=".views.appointment_detail.AppointmentDetailActivity"
            android:label="@string/title_activity_appointment_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.barber_detail.BarberDetailActivity" />

        <activity android:name=".views.user_detail.UserDetailActivity"></activity>
        <meta-data
            tools:replace="android:value"
            android:name="io.fabric.ApiKey"
            android:value="3086dd17b8f8383f1824b85972b1b6f5e76fcc43" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>