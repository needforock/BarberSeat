<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ve.needforock.barberseat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.appointment.JobSelectionActivity"
            android:label="@string/title_activity_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.appointment.BarberSelectionActivity" />
        <activity android:name=".views.appointment.DayView" />
        <activity
            android:name=".views.appointment_detail.AppointmentDetailActivity"
            android:label="@string/title_activity_appointment_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.barber_detail.BarberDetailActivity"></activity>
    </application>

</manifest>